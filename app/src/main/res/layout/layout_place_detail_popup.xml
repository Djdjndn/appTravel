<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="16dp">

    <!-- Header: Place Name and ADD Button -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp">

        <!-- Place Name -->
        <TextView
            android:id="@+id/tvPlaceName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Công viên Thống Nhất"
            android:textColor="#000000"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:maxLines="2"
            android:ellipsize="end" />

        <!-- Add Button -->
        <Button
            android:id="@+id/btnAddPlace"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="ADD"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            android:backgroundTint="#E4A663"
            android:elevation="0dp"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:translationY="-5dp"/>

    </RelativeLayout>

    <!-- Image Gallery (2 images side by side) -->
    <LinearLayout
        android:id="@+id/galleryContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgGallery1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:layout_marginEnd="8dp"
            android:scaleType="centerCrop"
            android:background="#F5F5F5"
            android:contentDescription="Gallery image 1" />

        <ImageView
            android:id="@+id/imgGallery2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:background="#F5F5F5"
            android:contentDescription="Gallery image 2" />

    </LinearLayout>

    <!-- Place Description -->
    <TextView
        android:id="@+id/tvPlaceDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="#666666"
        android:textSize="13sp"
        android:lineSpacingMultiplier="1.2" />

</LinearLayout>
